{
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "npm install"
    }
  ],
  "tasks": {
    "type-check": {
      "name": "Type Check",
      "command": "npx tsc --noEmit",
      "runAtStart": false
    },
    "run-tests": {
      "name": "Run Tests",
      "command": "npx tsx challenge.test.ts",
      "runAtStart": false
    },
    "test": {
      "name": "Type Check + Run Tests",
      "command": "npm test",
      "runAtStart": false
    }
  }
}
